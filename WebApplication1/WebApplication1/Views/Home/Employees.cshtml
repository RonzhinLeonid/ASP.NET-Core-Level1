@model IEnumerable<WebApplication1.Models.Employee>
@{
	Layout = null;
}
<!DOCTYPE html>

<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<title>Index</title>
</head>

<style type="text/css">
	TABLE {
		width: 400px; /* Ширина таблицы */
		border-collapse: collapse; /* Убираем двойные линии между ячейками */
	}

	TD, TH {
		padding: 10px; /* Поля вокруг содержимого таблицы */
		border: 1px solid black; /* Параметры рамки */
	}

	TH {
		background: #b0e0e6; /* Цвет фона */
	}
</style>
<body>

	<h3>Сотрудники</h3>

	<table>
		<thead>
			<tr>
				<th>Id</th>
				<th>Фамилия</th>
				<th>Имя</th>
				<th>Отчество</th>
				<th>Возраст</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var employee in Model)
			{
				<tr>
					<td>@employee.Id</td>
					<td>
						<a href="/Home/EmployeDetails/@employee.Id">
							@employee.LastName
						</a>
					</td>
					<td>@employee.FirstName</td>
					<td>@employee.Patronymic</td>
					<td>@employee.Age</td>
				</tr>
			}
		</tbody>
	</table>

	@Html.ActionLink("На главную", "")

</body>
</html> 